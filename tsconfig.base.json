{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@js-chat/common": ["libs/shared/common/src/index.ts"],
      "@js-chat/repository": ["libs/shared/repository/src/index.ts"],
      "@js-chat/repository-redis": ["libs/repository/redis/src/index.ts"],
      "@js-chat/redis-connection": [
        "libs/shared/redis-connection/src/index.ts"
      ],
      "@js-chat/core-controllers": [
        "libs/repository/core-controllers/src/index.ts"
      ],
      "@js-chat/http-client": ["libs/repository/http-client/src/index.ts"],
      "@js-chat/ng-api-client": ["libs/repository/ng-api-client/src/index.ts"],
      "@js-chat/conversation-gateway": [
        "libs/conversation/gateway/src/index.ts"
      ],
      "@js-chat/core-api-client": [
        "libs/repository/core-api-client/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
